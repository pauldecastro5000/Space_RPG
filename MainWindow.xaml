<Window x:Class="Space_RPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_RPG"
        xmlns:views="clr-namespace:Space_RPG.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="768"
        Width="1024"
        Background="Black">
    <Grid Margin="0,-1,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- TOP LEFT -->
        <Border Grid.Row="0">
            <views:ShipStatusView />
        </Border>

        <!-- TOP MIDDLE -->
        <Border Grid.Row="0"
                Grid.Column="1">
            <views:MainView />
        </Border>

        <!-- TOP RIGHT -->
        <Border Grid.Row="0"
                Grid.Column="2">
            <views:CrewListView />
        </Border>

        <!-- BOTTOM LEFT -->
        <Border Grid.Row="1"
                Grid.Column="0">
            <Button Content="Test"
                    Click="btnTest_Click" />
        </Border>

        <!-- BOTTOM MIDDLE -->
        <Border Grid.Row="1"
                Grid.Column="1">
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <ScrollViewer ScrollChanged="scrollChanged" Name="scrollViewer">
                    <ItemsControl ItemsSource="{Binding Log}"
                                  Style="{StaticResource Basic}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="White" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <TextBox Grid.Row="1"
                         Background="Black"
                         KeyDown="OnKeyDownHandler"
                         Text="{Binding Command, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="White" />
            </Grid>
        </Border>

        <!-- BOTTOM RIGHT -->
        <Border Grid.Row="1"
                Grid.Column="2">
        </Border>
    </Grid>
</Window>
